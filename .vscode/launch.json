{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Installer",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/nixos_bootstrap.py",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "Secure Boot (Enable)",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/nixos_secure_boot.py",
            "console": "integratedTerminal",
            "args": [ "enable" ],
            "sudo": true
        },
        {
            "name": "Secure Boot (Disable)",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/nixos_secure_boot.py",
            "console": "integratedTerminal",
            "args": [ "disable" ],
            "sudo": true
        },
        {
            "name": "Update",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/nixos_update.py",
            "console": "integratedTerminal",
            "sudo": true
        }
    ]
}